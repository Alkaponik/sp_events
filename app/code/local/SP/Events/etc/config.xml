<config>
    <modules>
        <SP_Events>
            <version>0.1.1</version>
        </SP_Events>
    </modules>
    <global>
        <blocks>
            <sp_events>
                <class>SP_Events_Block</class>
            </sp_events>
        </blocks>
        <helpers>
            <sp_events>
                <class>SP_Events_Helper</class>
            </sp_events>
        </helpers>
        <models>
            <sp_events>
                <class>SP_Events_Model</class>
                <resourceModel>sp_events_resource</resourceModel>
            </sp_events>
            <sp_events_resource>
                <class>SP_Events_Model_Resource</class>
                <entities>
                    <events>
                        <table>sp_events</table>
                    </events>
                </entities>
            </sp_events_resource>
        </models>
        <resources>
            <sp_events_setup>
                <setup>
                    <module>SP_Events</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sp_events_setup>
            <sp_events_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sp_events_write>
            <sp_events_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sp_events_read>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <sp_events>
                    <file>sp/events/events.xml</file>
                </sp_events>
            </updates>
        </layout>
    </frontend>
    <default>
        <sp_events>
            <general>
                <enabled>1</enabled>
                <header_phones>a:1:{s:18:"_1477734154240_240";a:3:{s:9:"city_name";s:5:"45445";s:12:"phone_number";s:7:"4545454";s:10:"country_id";s:2:"AS";}}</header_phones>
                <sender_name>Events notification</sender_name>
            </general>
        </sp_events>
    </default>
</config>